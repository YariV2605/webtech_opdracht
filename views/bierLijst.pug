extends layout

block content
    style.
        .bier-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: 20px;
            list-style: none;
        }

        .bier-grid li {
            padding: 10px;
            background-color: #f1f1f1;
            text-align: center;
        }

    ul.bier-grid
        each bier in bier_list
            li
                a(href=bier.url) #{bier.naam}
                |  #{bier.merk.merk}

        else
            li Geen bier in de DB.