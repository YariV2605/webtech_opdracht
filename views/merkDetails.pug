extends layout

block content
    .w3-container(style='padding:128px 16px')
        h3.w3-center #{merk.merk}
        .w3-row-padding.w3-center(style='margin-top:64px')
            p
            |   #{merk.merk}
            ul
                each bier in bier_list
                    li
                        a(href=bier.url) #{bier.naam}
                        |  (#{bier.merk.merk})

                else
                    li Geen bier in de DB.