doctype html
head
  title #{title}
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1')
  link(rel='stylesheet' href='https://www.w3schools.com/w3css/4/w3.css')
  link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Raleway')
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
  style.
    body,h1,h2,h3,h4,h5,h6 {font-family: "Raleway", sans-serif}
    body, html {
      height: 100%;
      line-height: 1.8;
    }
    /* Full height image header */
    .bgimg-1 {
      background-position: center;
      background-size: cover;
      background-image: url("/public/images/brugse-zot.png");
      min-height: 100%;
    }
    .w3-bar .w3-button {
      padding: 16px;
    }
// Navbar (sit on top)
.w3-top
  #myNavbar.w3-bar.w3-white.w3-card
    a.w3-bar-item.w3-button.w3-wide(href='/') BIERMAGAZINE
    // Right-sided navbar links
    .w3-right.w3-hide-small
      a.w3-bar-item.w3-button(href='/') HOME
      a.w3-bar-item.w3-button(href='/lijst')
        i.fa.fa-th
        |  BIERLIJST
      a.w3-bar-item.w3-button(href='/hotspot')
        i.fa.fa-map-pin
        |  HOTSPOTS
      a.w3-bar-item.w3-button(href='/users')
        i.fa.fa-user
    // Hide right-floated links on small screens and replace them with a menu icon
    a.w3-bar-item.w3-button.w3-right.w3-hide-large.w3-hide-medium(href='javascript:void(0)' onclick='w3_open()')
      i.fa.fa-bars
// Sidebar on small screens when clicking the menu icon
nav#mySidebar.w3-sidebar.w3-bar-block.w3-black.w3-card.w3-animate-left.w3-hide-medium.w3-hide-large(style='display:none')
  a.w3-bar-item.w3-button.w3-large.w3-padding-16(href='javascript:void(0)' onclick='w3_close()') Close &times;
  a.w3-bar-item.w3-button(href='/home' onclick='w3_close()') HOME
  a.w3-bar-item.w3-button(href='/lijst' onclick='w3_close()') BIERLIJST
  a.w3-bar-item.w3-button(href='/hotspot' onclick='w3_close()') HOTSPOT
  a.w3-bar-item.w3-button(href='/users' onclick='w3_close()') LOGIN

.w3-container(style='padding:128px 16px')
  block content
// Footer
footer.w3-center.w3-black.w3-padding-64
  a.w3-button.w3-light-grey(href='#home')
    i.fa.fa-arrow-up.w3-margin-right
    | To the top
  p
    | Powered by
    a.w3-hover-text-green(href='https://www.w3schools.com/w3css/default.asp' title='W3.CSS' target='_blank') w3.css

script.
  // Modal Image Gallery
  function onClick(element) {
    document.getElementById("img01").src = element.src;
    document.getElementById("modal01").style.display = "block";
    var captionText = document.getElementById("caption");
    captionText.innerHTML = element.alt;
  }
  // Toggle between showing and hiding the sidebar when clicking the menu icon
  var mySidebar = document.getElementById("mySidebar");
  function w3_open() {
    if (mySidebar.style.display === 'block') {
      mySidebar.style.display = 'none';
    } else {
      mySidebar.style.display = 'block';
    }
  }
  // Close the sidebar with the close button
  function w3_close() {
    mySidebar.style.display = "none";
  }
